    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>release</id>
            <name>artifactory.dev1-releases</name>
            <url>http://artifactory.dev1/artifactory/libs-release-local</url>
        </repository>
    </repositories>

    <profiles>
        <!-- Spring Boot JAR/WAR configuration (see https://docs.spring.io/spring-boot/docs/current/reference/htmlsingle/#build-tool-plugins-maven-packaging) -->
        <profile>
            <id>JAR</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <mobility.packaging>jar</mobility.packaging>
            </properties>
        </profile>
        <profile>
            <id>WAR</id>
            <properties>
                <mobility.packaging>war</mobility.packaging>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-tomcat</artifactId>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
