<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.3.8.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>cz.cvut.vvvs</groupId>
    <artifactId>vvvs-rest</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>${mobility.packaging}</packaging>

    <name>vvvs-rest</name>
    <description>V3S REST API</description>

    <properties>
        <java.version>1.8</java.version>
        <vvvs.version>1.3.1</vvvs.version>
        <app-common.version>0.5.1</app-common.version>
    </properties>

    <dependencies>
        <!-- CVUT -->
        <dependency>
            <groupId>cz.cvut.vic</groupId>
            <artifactId>app-common</artifactId>
            <version>${app-common.version}</version>
        </dependency>

        <!-- VVVS -->
        <dependency>
            <groupId>cz.cvut.vvvs</groupId>
            <artifactId>vvvs-services-api</artifactId>
            <version>${vvvs.version}</version>
        </dependency>
        <dependency>
            <groupId>cz.cvut.vvvs</groupId>
            <artifactId>vvvs-services-impl</artifactId>
            <version>${vvvs.version}</version>
        </dependency>
        <dependency>
            <groupId>cz.cvut.vvvs</groupId>
            <artifactId>vvvs-services-notifications</artifactId>
            <version>${vvvs.version}</version>
        </dependency>

       <!-- Spring -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Swagger -->
        <dependency>
            <groupId>io.springfox</groupId>
            <artifactId>springfox-swagger2</artifactId>
            <version>2.9.2</version>
        </dependency>
        <dependency>
            <groupId>io.springfox</groupId>
            <artifactId>springfox-swagger-ui</artifactId>
            <version>2.9.2</version>
        </dependency>

        <!-- Conditional logback logging -->
        <dependency>
            <groupId>org.codehaus.janino</groupId>
            <artifactId>janino</artifactId>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

